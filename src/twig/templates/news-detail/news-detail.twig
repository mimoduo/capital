	<div class="page_content">
		<div class="fs-row">
			<div class="fs-cell">
				{% if page.image %}
				<figure class="news_entry_figure">
					{% include '@partial-image' with {
						class: 'news_entry',
						alt: '',
						image: page.image,
						loading: 'eager',
						sources: [
							img.classic.xlrg,
							img.classic.lrg,
							img.classic.med,
							img.classic.sml,
							img.classic.xsml,
