{% include '@partial-page-header' with {
	page: page
} %}

<article class="news_entry">
	<script type="application/ld+json">
		{
			'@context': 'http://schema.org',
			'@type': 'NewsArticle',
			'url': '#',
			'publisher': {
				'@type': '{{ config.schema_type }}',
				'name': '{{ config.name }}'
			},
			'headline': '{{ page.title }}',
			'mainEntityOfPage': '#',
			'image': '{{ page.image }}',
			'datePublished': '2017-03-20T20:30:54+00:00',
			'author': 'person',
			'description': '{{ page.description }}'
		}
	</script>

	<!-- Page Feature -->
	<div class="page_feature" id="page_content" tabindex="-1" aria-labelledby="page_title">
