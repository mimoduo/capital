{#
	{% include '@partial-department-meta' with {
		item: {
			phone_numbers: [
				{
					label: 'Phone Label',
					type: 'Phone Type',
					number: '(410) 555-1234'
				}
			],
			office_hours: [
				{
					label: 'Monday',
					hours: '9am - 5pm'
				}
			],
			email: 'email@address.com',
			location: 'Location',
			social_links: [
				{
					title: 'Linkedin',
					url: '#'
				}
			]
		}
	} %}
#}
<!-- Person Meta -->
<div class="department_meta" id="meta" data-type="entity" data-category="{% for item in item.departments %}{{ item.name }}{% if not loop.last %}, {% endif %}{% endfor %}">
	<div class="fs-row">
		<div class="fs-cell">
			<div class="department_meta_inner">
				<div class="department_meta_details">
					{% if item.phone_numbers or item.email %}
						<div class="department_meta_detail contact">
							<div class="department_meta_detail_label">Contact</div>
							{% for phone in item.phone_numbers %}
								<div class="department_meta_detail_item">
									<div class="department_meta_detail_item_header">
										<div class="department_meta_detail_icon">{{ icon('phone') }}</div>
										<div class="department_meta_detail_hint">{{ phone.label }}</div>
									</div>
									<div class="department_meta_detail_info">
										<a class="department_meta_detail_info_link" href="tel:{{ tel(phone.number) }}">{{ phone.number }}</a>
									</div>
								</div>
							{% endfor %}
							{% if item.email %}
								<div class="department_meta_detail_item">
									<div class="department_meta_detail_item_header">
										<div class="department_meta_detail_icon">{{ icon('mail') }}</div>
										<div class="department_meta_detail_hint">Email Address</div>
									</div>
									<div class="department_meta_detail_info">
										<a class="department_meta_detail_info_link" href="mailto:{{ item.email }}">{{ item.email }}</a>
									</div>
								</div>
							{% endif %}
						</div>
					{% endif %}
					{% if item.location %}
						<div class="department_meta_detail location">
							<div class="department_meta_detail_label">Location</div>
							<div class="department_meta_detail_item">
								<div class="department_meta_detail_item_header">
									<div class="department_meta_detail_icon">{{ icon('place') }}</div>
								</div>
								<div class="department_meta_detail_info">{{ item.location }}</div>
							</div>
						</div>
					{% endif %}
					{% if item.departments %}
						<div class="department_meta_detail department">
							<div class="department_meta_detail_label">Department</div>
							{% for department in item.departments %}
								<div class="department_meta_detail_item">
									<div class="department_meta_detail_item_header">
										<div class="department_meta_detail_icon">{{ icon('building') }}</div>
									</div>
									<div class="department_meta_detail_info">
										<a class="department_meta_detail_info_link" href="{{ department.url }}">{{ department.name }}</a>
									</div>
								</div>
							{% endfor %}
						</div>
					{% endif %}
					{% if item.office_hours %}
						<div class="department_meta_detail hours">
							<div class="department_meta_detail_label">Office Hours</div>
							{% for office_hours in item.office_hours %}
								<div class="department_meta_detail_item">
									<div class="department_meta_detail_item_header">
										<div class="department_meta_detail_icon">{{ icon('clock') }}</div>
										<div class="department_meta_detail_hint">{{ office_hours.label }}</div>
									</div>
									<div class="department_meta_detail_info">{{ office_hours.hours }}</div>
								</div>
							{% endfor %}
						</div>
					{% endif %}
					{% if item.social_links %}
						<div class="department_meta_detail social">
							<div class="department_meta_detail_label">Social</div>
							<ul class="department_meta_socials" aria-label="Social Links for {{ item.name }}">
								{% for social in item.social_links %}
									<li class="department_meta_social">
										<a class="department_meta_social_link" href="{{ social.url }}" aria-label="{{ item.name }} {{ social.title }}" target="_blank" rel="noopener"><span class="department_meta_social_link_icon">{{ icon(social.title|lower) }}</span><span class="department_meta_social_link_label">{{ social.title }}</span></a>{% if not loop.last %}<span class="department_meta_social_punctuation">, </span>{% endif %}
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- END: Person Meta -->